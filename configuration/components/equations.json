{
  "description": "Configuration for equation processing in ePy_docs",
  "version": "1.0",
  "last_updated": "2025-07-14",
  "settings": {
    "auto_numbering": true,
    "label_prefix": "eq-",
    "label_format": "{prefix}{counter:03d}",
    "default_alignment": "center",
    "line_breaking": {
      "enabled": true,
      "max_width": 80,
      "break_at": ["=", "+", "-", "\\pm", "\\mp"]
    }
  },
  "quarto_integration": {
    "cross_reference_format": "@{label}",
    "caption_format": ": {caption} {{#{label}}}",
    "block_format": "$$\n{equation}\n$$ {{#{label}}}",
    "inline_format": "${equation}$"
  },
  "latex_processing": {
    "cleanup_patterns": {
      "remove_extra_spaces": true,
      "normalize_operators": true,
      "standardize_braces": true
    },
    "symbol_replacements": {
      "\\cdot": "\\cdot",
      "\\times": "\\times",
      "\\div": "\\div",
      "\\pm": "\\pm",
      "\\mp": "\\mp"
    },
    "function_formatting": {
      "sin": "\\sin",
      "cos": "\\cos", 
      "tan": "\\tan",
      "log": "\\log",
      "ln": "\\ln",
      "exp": "\\exp",
      "sqrt": "\\sqrt"
    }
  },
  "display_options": {
    "font_size": "normalsize",
    "spacing": {
      "before_equation": "\\medskip",
      "after_equation": "\\medskip",
      "between_lines": "\\baselineskip"
    },
    "numbering_style": "arabic",
    "numbering_position": "right"
  },
  "validation": {
    "check_balanced_braces": true,
    "check_valid_commands": true,
    "warn_deprecated": true,
    "required_packages": [
      "amsmath",
      "amssymb", 
      "amsfonts",
      "mathtools"
    ]
  },
  "categories": {
    "structural": {
      "description": "Structural engineering equations",
      "common_symbols": ["F", "M", "V", "\\sigma", "\\tau", "E", "I"],
      "units_integration": true
    },
    "dynamics": {
      "description": "Dynamic analysis equations", 
      "common_symbols": ["\\omega", "T", "f", "\\xi", "\\phi"],
      "units_integration": true
    },
    "general": {
      "description": "General mathematical equations",
      "common_symbols": ["x", "y", "z", "a", "b", "c"],
      "units_integration": false
    }
  }
}
