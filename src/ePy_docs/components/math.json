{
  "description": "Centralized mathematical formatting configuration for ePy_docs - includes equations, superscripts, subscripts, mathematical symbols, and special formatting for mathematical content",
  
  "equations": {
    "formatting": {
      "inline_delimiter": "$",
      "block_delimiter": "$$",
      "numbering": true,
      "label_prefix": "eq:",
      "reference_format": "Equation {number}",
      "quarto_crossref": {
        "chapters": false,
        "eq_labels": "arabic"
      }
    },
    "environments": {
      "align": "align",
      "equation": "equation", 
      "eqnarray": "eqnarray",
      "gather": "gather",
      "split": "split",
      "multline": "multline"
    },
    "macros": {
      "common": {
        "\\bm": "\\boldsymbol",
        "\\vec": "\\mathbf",
        "\\mat": "\\mathbf"
      }
    },
    "display": {
      "centering": true,
      "spacing_before": "1em",
      "spacing_after": "1em"
    }
  },
  
  "superscripts": {
    "character_map": {
      "0": "⁰", "1": "¹", "2": "²", "3": "³", "4": "⁴",
      "5": "⁵", "6": "⁶", "7": "⁷", "8": "⁸", "9": "⁹",
      "-": "⁻", "+": "⁺", "=": "⁼", "(": "⁽", ")": "⁾",
      "n": "ⁿ", "i": "ⁱ", "a": "ᵃ", "e": "ᵉ", "o": "ᵒ",
      "x": "ˣ", "y": "ʸ", "h": "ʰ", "r": "ʳ", "s": "ˢ",
      "t": "ᵗ", "u": "ᵘ", "v": "ᵛ", "w": "ʷ"
    },
    "power_pattern": "([a-zA-Z°µ]+)\\^([0-9-]+)",
    "superscript_pattern": "\\^(\\{[^}]+\\}|\\w)",
    "enable_superscript": true
  },
  
  "subscripts": {
    "character_map": {
      "0": "₀", "1": "₁", "2": "₂", "3": "₃", "4": "₄",
      "5": "₅", "6": "₆", "7": "₇", "8": "₈", "9": "₉",
      "+": "₊", "-": "₋", "=": "₌", "(": "₍", ")": "₎",
      "a": "ₐ", "e": "ₑ", "h": "ₕ", "i": "ᵢ", "j": "ⱼ",
      "k": "ₖ", "l": "ₗ", "m": "ₘ", "n": "ₙ", "o": "ₒ",
      "p": "ₚ", "r": "ᵣ", "s": "ₛ", "t": "ₜ", "u": "ᵤ",
      "v": "ᵥ", "x": "ₓ"
    },
    "subscript_pattern": "_(\\{[^}]+\\}|\\w)",
    "enable_subscript": true
  },
  
  "math_formatting": {
    "enable_superscript": true,
    "enable_subscript": true,
    "superscript_pattern": "\\^(\\{[^}]+\\}|\\w)",
    "subscript_pattern": "_(\\{[^}]+\\}|\\w)",
    "unit_patterns": {
      "area_units": {
        "/cm2": "/cm²",
        "/m2": "/m²",
        "/mm2": "/mm²",
        "/in2": "/in²",
        "/ft2": "/ft²",
        "cm2": "cm²",
        "m2": "m²",
        "mm2": "mm²",
        "in2": "in²",
        "ft2": "ft²"
      },
      "volume_units": {
        "/cm3": "/cm³",
        "/m3": "/m³",
        "/mm3": "/mm³",
        "/in3": "/in³",
        "/ft3": "/ft³",
        "cm3": "cm³",
        "m3": "m³",
        "mm3": "mm³",
        "in3": "in³",
        "ft3": "ft³"
      },
      "power_units": {
        "/s2": "/s²",
        "/s3": "/s³",
        "s2": "s²",
        "s3": "s³",
        "kg2": "kg²",
        "A2": "A²"
      }
    }
  },
  
  "bullet_points": {
    "patterns": ["• ", "* ", "- "],
    "numbered_pattern": "^\\d+\\.\\s+",
    "replacement": "- ",
    "bullet_pattern": "•\\s*"
  },
  
  "text_enhancement": {
    "bullet_replacement": "- ",
    "bullet_pattern": "•\\s*",
    "whitespace_cleanup": {
      "multiple_spaces": " +",
      "leading_spaces": "\\n +",
      "trailing_spaces": " +\\n",
      "empty_lines": "\\n\\s*\\n"
    }
  },
  
  "display_formatting": {
    "emphasis": {
      "bold": "**{text}**",
      "italic": "*{text}*",
      "code": "`{text}`"
    },
    "spacing": {
      "paragraph_break": "\\n\\n",
      "line_break": "  \\n",
      "section_break": "\\n\\n---\\n\\n"
    },
    "special_characters": {
      "degree": "°",
      "mu": "µ",
      "alpha": "α",
      "beta": "β",
      "gamma": "γ",
      "delta": "δ",
      "epsilon": "ε",
      "theta": "θ",
      "lambda": "λ",
      "mu_small": "μ",
      "pi": "π",
      "sigma": "σ",
      "tau": "τ",
      "phi": "φ",
      "chi": "χ",
      "psi": "ψ",
      "omega": "ω"
    }
  },
  
  "mathematical_symbols": {
    "operators": {
      "plus_minus": "±",
      "multiply": "×",
      "divide": "÷",
      "not_equal": "≠",
      "less_equal": "≤",
      "greater_equal": "≥",
      "approximately": "≈",
      "infinity": "∞",
      "partial": "∂",
      "integral": "∫",
      "sum": "∑",
      "product": "∏",
      "square_root": "√",
      "cube_root": "∛",
      "fourth_root": "∜"
    },
    "sets": {
      "empty_set": "∅",
      "intersection": "∩",
      "union": "∪",
      "subset": "⊂",
      "superset": "⊃",
      "element_of": "∈",
      "not_element_of": "∉"
    },
    "arrows": {
      "right_arrow": "→",
      "left_arrow": "←",
      "up_arrow": "↑",
      "down_arrow": "↓",
      "double_arrow": "⇒",
      "left_right": "↔"
    }
  }
}
