{
  "description": "Note callouts configuration for ePy_docs reports with Quarto native support",
  "quarto_callout_types": {
    "note": "note",
    "warning": "warning", 
    "tip": "tip",
    "caution": "caution",
    "important": "important",
    "error": "caution",
    "success": "tip",
    "consultant": "note"
  },
  "callout_defaults": {
    "collapse": false,
    "icon": true,
    "appearance": "default"
  },
  "layout_styles": {
    "academic": {
      "font_family": "Times New Roman",
      "font_weight": "normal", 
      "border_radius": 0,
      "shadow": false,
      "color_intensity": 0.7,
      "border_style": "solid",
      "spacing": "normal"
    },
    "technical": {
      "font_family": "Arial",
      "font_weight": "normal",
      "border_radius": 4, 
      "shadow": true,
      "color_intensity": 0.8,
      "border_style": "solid",
      "spacing": "compact"
    },
    "corporate": {
      "font_family": "Helvetica",
      "font_weight": "bold",
      "border_radius": 6,
      "shadow": true, 
      "color_intensity": 0.9,
      "border_style": "solid",
      "spacing": "wide"
    },
    "minimal": {
      "font_family": "Computer Modern",
      "font_weight": "light",
      "border_radius": 0,
      "shadow": false,
      "color_intensity": 0.5, 
      "border_style": "solid",
      "spacing": "tight"
    },
    "classic": {
      "font_family": "Charter",
      "font_weight": "normal",
      "border_radius": 2,
      "shadow": false,
      "color_intensity": 0.75,
      "border_style": "double", 
      "spacing": "normal"
    },
    "scientific": {
      "font_family": "Utopia", 
      "font_weight": "medium",
      "border_radius": 3,
      "shadow": false,
      "color_intensity": 0.8,
      "border_style": "solid",
      "spacing": "normal"
    },
    "professional": {
      "font_family": "Latin Modern",
      "font_weight": "medium",
      "border_radius": 4,
      "shadow": true,
      "color_intensity": 0.85,
      "border_style": "solid",
      "spacing": "balanced"
    },
    "creative": {
      "font_family": "Libertine",
      "font_weight": "normal", 
      "border_radius": 8,
      "shadow": true,
      "color_intensity": 0.95,
      "border_style": "dashed",
      "spacing": "artistic"
    }
  }
}
