{
  "display": {
    "html_responsive": true,
    "auto_row_height": true,
    "max_width_inches": 8.0,
    "max_width_inches_html": 6.5,
    "min_column_width_inches": 1.0,
    "min_row_height_factor": 1.0,
    "line_spacing": 0.1,
    "base_cell_height_inches": 0.3,
    "padding": 1,
    "alignment": "CENTER",
    "valignment": "MIDDLE",
    "dpi": 300
  },
  "typography": {
    "font_size": 9,
    "header_font_size": 11,
    "title_font_size": 9
  },
  "styling": {
    "grid_width": 1,
    "highlight_node_column": true,
    "alternating_rows": false
  },
  "pagination": {
    "max_rows_per_table": 40,
    "single_table_title_format": "{title}",
    "multi_table_title_format": "{title} (Parte {part}/{total})",
    "multi_table_no_title_format": "Parte {part}/{total}"
  },
  "cross_referencing": {
    "label_prefix": "tbl-",
    "auto_numbering": true,
    "label_format": "{prefix}{counter}",
    "split_table_label_format": "{prefix}{counter}-{part}",
    "enable_cross_referencing": true,
    "quarto_syntax": true
  }
}
