      "fallback_width": 500
    },
    "cross_referencing": {
      "label_prefix": "fig-",
      "auto_numbering": true,
      "label_format": "{prefix}{counter}",
      "enable_cross_referencing": true,
      "quarto_syntax": true,
      "quarto_crossref": {
        "chapters": false,
        "fig_labels": "arabic"
