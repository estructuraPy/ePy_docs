{
  "layout_styles": {
    "academic": {
      "caption_font_size": 10,
      "title_font_size": 10,
      "font_family": "Times New Roman",
      "alignment": "CENTER",
      "padding": 2
    },
    "technical": {
      "caption_font_size": 9,
      "title_font_size": 9,
      "font_family": "Arial",
      "alignment": "CENTER",
      "padding": 1
    },
    "corporate": {
      "caption_font_size": 10,
      "title_font_size": 11,
      "font_family": "Helvetica",
      "alignment": "CENTER",
      "padding": 2
    },
    "minimal": {
      "caption_font_size": 8,
      "title_font_size": 8,
      "font_family": "Computer Modern",
      "alignment": "LEFT",
      "padding": 1
    },
    "classic": {
      "caption_font_size": 9,
      "title_font_size": 10,
      "font_family": "Charter",
      "alignment": "CENTER",
      "padding": 2
    },
    "scientific": {
      "caption_font_size": 8,
      "title_font_size": 9,
      "font_family": "Utopia",
      "alignment": "CENTER",
      "padding": 1
    },
    "professional": {
      "caption_font_size": 9,
      "title_font_size": 10,
      "font_family": "Latin Modern",
      "alignment": "CENTER",
      "padding": 2
    },
    "creative": {
      "caption_font_size": 10,
      "title_font_size": 12,
      "font_family": "Libertine",
      "alignment": "CENTER",
      "padding": 3
    }
  },
  "display": {
    "html_responsive": true,
    "max_width_inches": 8.0,
    "max_width_inches_html": 6.5,
    "dpi": 300,
    "html_max_width_percent": 65,
    "html_responsive_breakpoints": {
      "mobile": 480,
      "tablet": 768,
      "desktop": 1200
    }
  },
  "typography": {
    "caption_font_size": 9,
    "title_font_size": 9
  },
  "styling": {
    "padding": 1,
    "alignment": "CENTER"
  },
  "pagination": {
    "figure_title_format": "{title}",
    "figure_no_title_format": ""
  },
  "cross_referencing": {
    "label_prefix": "fig-",
    "auto_numbering": true,
    "label_format": "{prefix}{counter}",
    "enable_cross_referencing": true,
    "quarto_syntax": true,
    "quarto_crossref": {
      "chapters": false,
      "fig_labels": "arabic"
    }
  },
  "figures": {
    "directory": "figures",
    "filename_pattern": "figure_{counter}"
  }
}
