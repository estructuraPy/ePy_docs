{
  "project": {
    "type": "book",
    "lang": "en"
  },
  "crossref": {
    "chapters": false,
    "eq-labels": "arabic",
    "fig-labels": "arabic", 
    "tbl-labels": "arabic"
  },
  "execute": {
    "echo": false
  },
  "format": {
    "common": {
      "toc": true,
      "toc-depth": 3,
      "number-sections": false,
      "fig-cap-location": "bottom"
    },
    "pdf": {
      "documentclass": "report",
      "papersize": "letter",
      "colorlinks": true,
      "keep-tex": false,
      "lof": true,
      "lot": true,
      "fig-pos": "H"
    },
    "html": {
      "theme": "default",
      "self-contained": true,
      "code-fold": true,
      "code-tools": true,
      "embed-resources": true,
      "tbl-cap-location": "bottom"
    }
  }
}
