    "lists": {
        "unordered": {
            "item_format": "- {item}",
            "spacing": "\n\n"
        },
        "ordered": {
            "item_format": "{number}. {item}",
            "spacing": "\n\n"
        }
    },
    "superscripts": {
        "character_map": {
            "0": "⁰", "1": "¹", "2": "²", "3": "³", "4": "⁴",
            "5": "⁵", "6": "⁶", "7": "⁷", "8": "⁸", "9": "⁹",
            "-": "⁻", "+": "⁺"
        },
        "power_pattern": "([a-zA-Z°µ]+)\\^([0-9-]+)"
    },
    "bullet_points": {
        "patterns": ["• ", "* ", "- "],
        "numbered_pattern": "^\\d+\\.\\s+"
    },
    "text_enhancement": {
        "bullet_replacement": "- ",
        "bullet_pattern": "•\\s*",
        "whitespace_cleanup": {
            "multiple_spaces": " +",
            "leading_spaces": "\\n +", 
            "trailing_spaces": " +\\n"
        }
    },
    "latex_fonts": {
        "Times New Roman": {
            "package": "mathptmx",
            "command": "\\renewcommand{\\rmdefault}{ptm}"
        },
        "Arial": {
            "package": "helvet",
            "command": "\\renewcommand{\\familydefault}{\\sfdefault}"
        },
        "Liberation Serif": {
            "package": "libertinus",
            "command": "\\renewcommand{\\rmdefault}{libertinusserif-TLF}"
        },
        "Helvetica": {
            "package": "helvet",
            "command": "\\renewcommand{\\familydefault}{\\sfdefault}\\renewcommand{\\bfdefault}{b}"
        },
        "Charter": {
            "package": "charter",
            "command": "\\renewcommand{\\rmdefault}{bch}"
        },
        "Utopia": {
            "package": "fourier",
            "command": "\\renewcommand{\\rmdefault}{put}"
        },
        "Latin Modern": {
            "package": "lmodern",
            "command": "\\renewcommand{\\rmdefault}{lmr}"
        },
        "Libertine": {
            "package": "libertine",
            "command": "\\renewcommand{\\rmdefault}{LinuxLibertineT-LF}"
        }
    },
    "validation": {
        "required_fields": {
            "headers": ["text"],
            "text": ["content"],
            "lists": ["items"],
            "field": ["label", "value"]
        },
        "max_text_length": 10000,
        "max_list_items": 100
    }
