{
  "crossref": {
    "chapters": false,
    "eq-labels": "arabic",
    "fig-labels": "arabic", 
    "tbl-labels": "arabic"
  },
  "execute": {
    "echo": false
  },
  "format": {
    "common": {
      "toc": true,
      "toc-depth": 3,
      "number-sections": false,
      "fig-cap-location": "bottom"
    },
    "pdf": {
      "documentclass": "report",
      "papersize": "letter",
      "colorlinks": true,
      "keep-tex": false,
      "lof": true,
      "lot": true,
      "fig-pos": "H"
    },
    "html": {
      "theme": "default",
      "self-contained": true,
      "code-fold": true,
      "code-tools": true,
      "embed-resources": true,
      "tbl-cap-location": "bottom"
    }
  },
  "layouts": {
    "academic": {
      "header_position": "top",
      "footer_position": "bottom",
      "title_alignment": "center",
      "content_spacing": "normal",
      "header_content": "project_client",
      "footer_content": "page_number",
      "background_enabled": false,
      "watermark": null,
      "header_style": "academic",
      "toc": true,
      "default_palette": "blues"
    },
    "technical": {
      "header_position": "top",
      "footer_position": "bottom",
