{
  "general_settings": {
    "default_dpi": 300,
    "default_encoding": "utf-8",
    "temp_cleanup": true
  },
  "pdf_settings": {
    "margins": {
      "top": "1in",
      "bottom": "1in",
      "left": "1in",
      "right": "1in"
    },
    "pagesize": "letter",
    "styles": {
      "title": {
        "size": 16,
        "weight": "bold",
        "color": "#000000"
      },
      "subtitle": {
        "size": 14,
        "weight": "normal",
        "color": "#666666"
      },
      "body": {
        "size": 12,
        "weight": "normal",
        "color": "#000000"
      },
      "caption": {
        "size": 10,
        "weight": "italic",
        "color": "#555555"
      }
    },
    "table_style": {
      "header_color": "#f0f0f0",
      "border_width": 1,
      "border_color": "#cccccc",
      "font_size": 10,
      "cell_padding": 4,
      "multi_table_title_format": "{title} (Parte {part}/{total})"
    },
    "note_settings": {
      "border_width": 2,
      "padding": 10,
      "font_size": 11,
      "default_width_inches": 7.5,
      "margin_left_inches": 0.5,
      "margin_right_inches": 0.5,
      "types": {
        "note": {
          "color": "#e3f2fd",
          "border_color": "#2196f3"
        },
        "warning": {
          "color": "#fff3e0",
          "border_color": "#ff9800"
        },
        "error": {
          "color": "#ffebee",
          "border_color": "#f44336"
        },
        "success": {
          "color": "#e8f5e8",
          "border_color": "#4caf50"
        },
        "tip": {
          "color": "#f3e5f5",
          "border_color": "#9c27b0"
        }
      }
    },
    "reference_settings": {
      "add_subtitle": true,
      "title": "## Referencias"
    }
  }
}