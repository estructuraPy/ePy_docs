{
    "headers": {
        "h1": {
            "format": "\n# {text}\n\n"
        },
        "h2": {
            "format": "\n## {text}\n\n"
        },
        "h3": {
            "format": "\n### {text}\n\n"
        }
    },
    "text": {
        "content_format": "{content}\n\n",
        "field_format": "**{label}:** {value}\n\n",
        "field_bold_format": "**{label}:** {value}\n\n"
    },
    "lists": {
        "unordered": {
            "item_format": "- {item}",
            "spacing": "\n\n"
        },
        "ordered": {
            "item_format": "{number}. {item}",
            "spacing": "\n\n"
        }
    },
    "superscripts": {
        "character_map": {
            "0": "⁰", "1": "¹", "2": "²", "3": "³", "4": "⁴",
            "5": "⁵", "6": "⁶", "7": "⁷", "8": "⁸", "9": "⁹",
            "-": "⁻", "+": "⁺"
        },
        "power_pattern": "([a-zA-Z°µ]+)\\^([0-9-]+)"
    },
    "bullet_points": {
        "patterns": ["• ", "* ", "- "],
        "numbered_pattern": "^\\d+\\.\\s+"
    },
    "text_enhancement": {
        "bullet_replacement": "- ",
        "bullet_pattern": "•\\s*",
        "whitespace_cleanup": {
            "multiple_spaces": " +",
            "leading_spaces": "\\n +", 
            "trailing_spaces": " +\\n"
        }
    },
    "validation": {
        "required_fields": {
            "headers": ["text"],
            "text": ["content"],
            "lists": ["items"],
            "field": ["label", "value"]
        },
        "max_text_length": 10000,
        "max_list_items": 100
    }
}
