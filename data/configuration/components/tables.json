{
  "description": "Table styling configuration for ePy_docs reports with layout-specific styling only. Colors are centralized in colors.json and typography in text.json.",
  "layout_styles": {
    "academic": {
      "styling": {
        "grid_width": 1.5,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 6
      }
    },
    "technical": {
      "styling": {
        "grid_width": 0.8,
        "highlight_node_column": false,
        "alternating_rows": false,
        "border_style": "solid",
        "cell_padding": 4
      }
    },
    "corporate": {
      "styling": {
        "grid_width": 2,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 8
      }
    },
    "minimal": {
      "styling": {
        "grid_width": 0.5,
        "highlight_node_column": false,
        "alternating_rows": false,
        "border_style": "solid",
        "cell_padding": 3
      }
    },
    "classic": {
      "styling": {
        "grid_width": 1,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "double",
        "cell_padding": 5
      }
    },
    "scientific": {
      "styling": {
        "grid_width": 0.8,
        "highlight_node_column": false,
        "alternating_rows": false,
        "border_style": "solid",
        "cell_padding": 4
      }
    },
    "professional": {
      "styling": {
        "grid_width": 1.2,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 5
      }
    },
    "creative": {
      "styling": {
        "grid_width": 1.5,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "dashed",
        "cell_padding": 7
      }
    }
  },
  "display": {
    "html_responsive": true,
    "auto_row_height": true,
    "max_width_inches": 8.0,
    "max_width_inches_html": 6.5,
    "min_column_width_inches": 1.0,
    "min_row_height_factor": 1.0,
    "line_spacing": 0.1,
    "base_cell_height_inches": 0.3,
    "padding": 1,
    "dpi": 300,
    "multi_table_title_format": "{title} (Parte {part}/{total})",
    "multi_table_no_title_format": "Tabla {part}/{total}",
    "font_scale_factors": {
      "ultra_small": 0.6,
      "small": 0.8,
      "normal": 1.0,
      "large": 1.2,
      "ultra_large": 1.4
    }
  },
  "category_rules": {
    "nodes": {
      "name_keywords": ["node", "nodo", "point", "punto"],
      "coordinate_patterns": ["x", "y", "z"],
      "value_patterns": [],
      "description": "Node and coordinate columns"
    },
    "dimensions": {
      "name_keywords": ["length", "width", "height", "dimension", "size", "longitud", "ancho", "altura"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Dimensional columns"
    },
    "forces": {
      "name_keywords": ["force", "load", "reaction", "moment", "fuerza", "carga", "reaccion", "momento"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Force and load columns"
    },
    "properties": {
      "name_keywords": ["stress", "strain", "pressure", "tension", "compression", "esfuerzo", "deformacion", "presion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Material property columns"
    },
    "design": {
      "name_keywords": ["ratio", "factor", "check", "utilization", "coeficiente", "verificacion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Design check columns"
    },
    "analysis": {
      "name_keywords": ["result", "analysis", "calculation", "resultado", "analisis", "calculo"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Analysis result columns"
    },
    "support": {
      "name_keywords": ["support", "boundary", "restraint", "apoyo", "restriccion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Support condition columns"
    },
    "status": {
      "name_keywords": ["status", "state", "condition", "estado", "condicion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Status and condition columns"
    },
    "general": {
      "name_keywords": [],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "General purpose columns"
    }
  },
  "format_rules": {
    "coordinates": {
      "precision": 3,
      "unit_format": "parentheses",
      "decimal_places": 3,
      "description": "Formatting for coordinate values"
    },
    "forces": {
      "precision": 2,
      "unit_format": "parentheses", 
      "decimal_places": 2,
      "description": "Formatting for force values"
    },
    "stresses": {
      "precision": 2,
      "unit_format": "parentheses",
      "decimal_places": 2,
      "description": "Formatting for stress/pressure values"
    },
    "ratios": {
      "precision": 3,
      "unit_format": "none",
      "decimal_places": 3,
      "description": "Formatting for dimensionless ratios"
    },
    "general": {
      "precision": 2,
      "unit_format": "parentheses",
      "decimal_places": 2,
      "description": "General formatting rules"
    }
  },
  "pagination": {
    "max_rows_per_table": 40,
    "single_table_title_format": "{title}",
    "multi_table_title_format": "{title} (Parte {part}/{total})",
    "multi_table_no_title_format": "Parte {part}/{total}"
  },
  "default_header_color": "#2E86AB"
}
