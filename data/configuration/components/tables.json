{
  "description": "Table styling configuration for ePy_docs reports with layout-specific styles matching colors, text, and page configurations",
  "layout_styles": {
    "academic": {
      "typography": {
        "font_size": 9,
        "header_font_size": 11,
        "title_font_size": 10,
        "font_family": "Times New Roman"
      },
      "styling": {
        "grid_width": 1.5,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 6
      },
      "colors": {
        "header_bg_alpha": 0.8,
        "alt_row_alpha": 0.3,
        "grid_alpha": 0.9
      },
      "palette_name": "engineering"
    },
    "technical": {
      "typography": {
        "font_size": 8,
        "header_font_size": 10,
        "title_font_size": 9,
        "font_family": "Arial"
      },
      "styling": {
        "grid_width": 0.8,
        "highlight_node_column": false,
        "alternating_rows": false,
        "border_style": "solid",
        "cell_padding": 4
      },
      "colors": {
        "header_bg_alpha": 0.9,
        "alt_row_alpha": 0.2,
        "grid_alpha": 0.7
      },
      "palette_name": "technical"
    },
    "corporate": {
      "typography": {
        "font_size": 9,
        "header_font_size": 12,
        "title_font_size": 11,
        "font_family": "Helvetica",
        "font_weight": "bold"
      },
      "styling": {
        "grid_width": 2,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 8
      },
      "colors": {
        "header_bg_alpha": 1.0,
        "alt_row_alpha": 0.4,
        "grid_alpha": 1.0
      },
      "palette_name": "professional"
    },
    "minimal": {
      "typography": {
        "font_size": 8,
        "header_font_size": 9,
        "title_font_size": 8,
        "font_family": "Helvetica"
      },
      "styling": {
        "grid_width": 0.5,
        "highlight_node_column": false,
        "alternating_rows": false,
        "border_style": "solid",
        "cell_padding": 3
      },
      "colors": {
        "header_bg_alpha": 0.6,
        "alt_row_alpha": 0.1,
        "grid_alpha": 0.5
      },
      "palette_name": "environmental"
    },
    "classic": {
      "typography": {
        "font_size": 9,
        "header_font_size": 10,
        "title_font_size": 9,
        "font_family": "Charter"
      },
      "styling": {
        "grid_width": 1,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "double",
        "cell_padding": 5
      },
      "colors": {
        "header_bg_alpha": 0.7,
        "alt_row_alpha": 0.25,
        "grid_alpha": 0.8
      },
      "palette_name": "financial"
    },
    "scientific": {
      "typography": {
        "font_size": 8,
        "header_font_size": 9,
        "title_font_size": 8,
        "font_family": "Utopia"
      },
      "styling": {
        "grid_width": 0.8,
        "highlight_node_column": false,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 3
      },
      "colors": {
        "header_bg_alpha": 0.6,
        "alt_row_alpha": 0.2,
        "grid_alpha": 0.6
      }
    },
    "professional": {
      "typography": {
        "font_size": 9,
        "header_font_size": 11,
        "title_font_size": 10,
        "font_family": "Latin Modern"
      },
      "styling": {
        "grid_width": 1.2,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "solid",
        "cell_padding": 5
      },
      "colors": {
        "header_bg_alpha": 0.8,
        "alt_row_alpha": 0.3,
        "grid_alpha": 0.8
      },
      "palette_name": "engineering"
    },
    "creative": {
      "typography": {
        "font_size": 10,
        "header_font_size": 12,
        "title_font_size": 11,
        "font_family": "Libertine"
      },
      "styling": {
        "grid_width": 1.5,
        "highlight_node_column": true,
        "alternating_rows": true,
        "border_style": "dashed",
        "cell_padding": 7
      },
      "colors": {
        "header_bg_alpha": 0.9,
        "alt_row_alpha": 0.35,
        "grid_alpha": 0.9
      },
      "palette_name": "creative"
    }
  },
  "display": {
    "html_responsive": true,
    "auto_row_height": true,
    "max_width_inches": 8.0,
    "max_width_inches_html": 6.5,
    "min_column_width_inches": 1.0,
    "min_row_height_factor": 1.0,
    "line_spacing": 0.1,
    "base_cell_height_inches": 0.3,
    "padding": 1,
    "alignment": "CENTER",
    "valignment": "MIDDLE",
    "dpi": 300,
    "html_max_width_percent": 65,
    "html_responsive_breakpoints": {
      "mobile": 480,
      "tablet": 768,
      "desktop": 1200
    }
  },
  "pagination": {
    "max_rows_per_table": 40,
    "single_table_title_format": "{title}",
    "multi_table_title_format": "{title} (Parte {part}/{total})",
    "multi_table_no_title_format": "Parte {part}/{total}"
  },
  "source": {
    "enable_source": true,
    "source_format": "({source})",
    "default_source": "",
    "position": "below_caption"
  },
  "cross_referencing": {
    "label_prefix": "tbl-",
    "auto_numbering": true,
    "label_format": "{prefix}{counter}",
    "split_table_label_format": "{prefix}{counter}-{part}",
    "enable_cross_referencing": true,
    "quarto_syntax": true,
    "quarto_crossref": {
      "chapters": false,
      "tbl_labels": "arabic"
    }
  },
  "category_rules": {
    "nodes": {
      "name_keywords": ["node", "nodo", "point", "punto"],
      "coordinate_patterns": ["x", "y", "z"],
      "value_patterns": [],
      "description": "Node and coordinate columns"
    },
    "dimensions": {
      "name_keywords": ["length", "width", "height", "dimension", "size", "longitud", "ancho", "altura"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Dimensional columns"
    },
    "forces": {
      "name_keywords": ["force", "load", "reaction", "moment", "fuerza", "carga", "reaccion", "momento"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Force and load columns"
    },
    "properties": {
      "name_keywords": ["stress", "strain", "pressure", "tension", "compression", "esfuerzo", "deformacion", "presion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Material property columns"
    },
    "design": {
      "name_keywords": ["ratio", "factor", "check", "utilization", "coeficiente", "verificacion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Design check columns"
    },
    "analysis": {
      "name_keywords": ["result", "analysis", "calculation", "resultado", "analisis", "calculo"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Analysis result columns"
    },
    "support": {
      "name_keywords": ["support", "boundary", "restraint", "apoyo", "restriccion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Support condition columns"
    },
    "status": {
      "name_keywords": ["status", "state", "condition", "estado", "condicion"],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "Status and condition columns"
    },
    "general": {
      "name_keywords": [],
      "coordinate_patterns": [],
      "value_patterns": [],
      "description": "General purpose columns"
    }
  },
  "format_rules": {
    "coordinates": {
      "precision": 3,
      "unit_format": "parentheses",
      "decimal_places": 3,
      "description": "Formatting for coordinate values"
    },
    "forces": {
      "precision": 2,
      "unit_format": "parentheses",
      "decimal_places": 2,
      "description": "Formatting for force values"
    },
    "stresses": {
      "precision": 2,
      "unit_format": "parentheses",
      "decimal_places": 2,
      "description": "Formatting for stress/pressure values"
    },
    "ratios": {
      "precision": 3,
      "unit_format": "none",
      "decimal_places": 3,
      "description": "Formatting for dimensionless ratios"
    },
    "general": {
      "precision": 2,
      "unit_format": "parentheses",
      "decimal_places": 2,
      "description": "General formatting rules"
    }
  },
  "table_style": {
    "border_width": 1,
    "font_size": 10,
    "cell_padding": 4,
    "multi_table_title_format": "{title} (Parte {part}/{total})"
  }
}
